{
  "extends": ["config:recommended"],
  "minimumReleaseAge": "14 days",
  "separateMajorMinor": true,
  "prConcurrentLimit": 8,
  "prHourlyLimit": 1,
  "platformAutomerge": true,
  "rebaseWhen": "conflicted",
  "packageRules": [
    {
      "matchCurrentVersion": "!/^0/",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "groupName": "AWS SDK",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "matchPackageNames": ["/^@aws-sdk//"]
    },
    {
      "groupName": "Babel",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "matchPackageNames": ["/^@babel//"]
    },
    {
      "groupName": "Testing Library",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "matchPackageNames": ["/^@testing-library//"]
    },
    {
      "groupName": "Serverless",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "matchPackageNames": ["/^serverless/"]
    },
    {
      "groupName": "Sentry",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "matchPackageNames": ["/^@sentry//"]
    },
    {
      "groupName": "GraphQL Tools",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "matchPackageNames": ["/^@graphql-tools//", "/^graphql/"]
    }
  ],
  "timezone": "Europe/London",
  "updateNotScheduled": false,
  "schedule": ["* 4-8 * * 1-4"],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "ignoreDeps": ["@types/react", "@types/react-dom"]
}
