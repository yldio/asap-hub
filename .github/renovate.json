{
  "extends": ["config:base"],
  "prConcurrentLimit": 8,
  "prHourlyLimit": 1,
  "platformAutomerge": true,
  "rebaseWhen": "conflicted",
  "packageRules": [
    {
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "matchPackageNames": ["@sentry/cli"],
      "enabled": false
    }
  ],
  "timezone": "Europe/London",
  "updateNotScheduled": false,
  "schedule": ["after 5am and before 3pm every weekday"],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  }
}
