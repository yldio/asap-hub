{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "AppModel",
  "type": "object",
  "required": [
    "clients",
    "roles",
    "languages",
    "contributors"
  ],
  "properties": {
    "clients": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/AppClientModel"
      }
    },
    "roles": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/AppRoleModel"
      }
    },
    "languages": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/UpdateLanguageDto"
      }
    },
    "contributors": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/AppContributorModel"
      }
    }
  },
  "definitions": {
    "AppClientModel": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "role"
      ],
      "properties": {
        "role": {
          "type": "string",
          "minLength": 1
        },
        "name": {
          "type": [
            "null",
            "string"
          ]
        }
      }
    },
    "AppRoleModel": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "permissions"
      ],
      "properties": {
        "permissions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "UpdateLanguageDto": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "isMaster": {
          "type": [
            "boolean",
            "null"
          ]
        },
        "isOptional": {
          "type": "boolean"
        },
        "fallback": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          }
        }
      }
    },
    "AppContributorModel": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "role"
      ],
      "properties": {
        "role": {
          "type": "string",
          "minLength": 1
        }
      }
    }
  }
}