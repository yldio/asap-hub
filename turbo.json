{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build:babel": {
      "outputs": ["build/**/*", "build-cjs/**/*"]
    },
    "//#build:typecheck": {
      "dependsOn": [],
      "outputs": [
        "{apps,packages}/**/build/**/*.d.ts",
        "{apps,packages}/**/*.tsbuildinfo"
      ],
      "inputs": [
        "{apps,packages}/src/**/*.{ts,tsx}",
        "{apps,packages}/test/**/*.ts"
      ]
    },
    "typecheck": {
      "dependsOn": ["//#build:typecheck"]
    },
    "build": {
      "dependsOn": ["^build", "^build:babel", "//#build:typecheck"],
      "outputs": [".build/**", ".dist/**"]
    },
    "start": {
      "cache": false,
      "persistent": true
    }
  }
}
